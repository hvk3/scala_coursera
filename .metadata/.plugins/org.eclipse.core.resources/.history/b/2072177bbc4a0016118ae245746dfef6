package week3

object rationals {
	def gcd(a: Int, b: Int): Int =
		if (b == 0) a
		else gcd(b, a % b)                //> gcd: (a: Int, b: Int)Int
	gcd(2, 5)                                 //> res0: Int = 1
	val x = new Rational(1, 2)                //> x  : week3.Rational = week3.Rational@b684286
	x.numer                                   //> res1: Int = 1
}

class Rational(x: Int, y: Int) {
	def numer = x
	def denom = y
	
	def add(that: Rational) =
		(numer * that.denom + denom * that.numer) / (denom * that.denom)
}